@{
}

@model List<Application>

<section class="pt-3 pt-md-5 pb-md-5 pt-lg-7 bg-gray-200">
    <h1 class="justify-content-center text-center" style="margin-bottom: 50px; margin-top: 25px;">Joel's Movie Collection</h1>
    <div class="row justify-content-center" style="margin-bottom:70px; margin-right:0px; margin-left:0px;">
        <div class="col-lg-11">
            <div class="card">
                <div class="table-responsive table-container">
                    <!-- Bootstrap grid system -->
                    <div class="table-responsive" style="max-height: 600px;">
                        <table class="table align-items-center mb-0">
                            <thead class="fw-bold">
                                <tr>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Movie Title</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Category One</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Category Two</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Year</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Director</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Rating</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Edited</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Lent</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Edited</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Notes</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>

                            @foreach (var x in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td class="align-middle text-center text-sm"><p class="text-xs font-weight-bold mb-0">@x.movieTitle</p></td>
                                        <td class="align-middle text-center text-sm"><p class="text-xs font-weight-bold mb-0">@x.movieCategoryOne</p></td>
                                        <td class="align-middle text-center text-sm"><p class="text-xs font-weight-bold mb-0">@x.movieCategoryTwo</p></td>
                                        <td class="align-middle text-center text-sm"><p class="text-xs font-weight-bold mb-0">@x.movieYear</p></td>
                                        <td class="align-middle text-center text-sm"><p class="text-xs font-weight-bold mb-0">@x.movieDirector</p></td>
                                        <td class="align-middle text-center text-sm"><p class="text-xs font-weight-bold mb-0">@x.movieRating</p></td>
                                        <td class="align-middle text-center text-sm"><p class="text-xs font-weight-bold mb-0">@x.movieEdited</p></td>
                                        <td class="align-middle text-center text-sm"><p class="text-xs font-weight-bold mb-0">@x.movieLent</p></td>
                                        <td class="align-middle text-center text-sm"><p class="text-xs font-weight-bold mb-0">@x.movieEdited</p></td>
                                        <td class="align-middle text-center text-sm"><p class="text-xs font-weight-bold mb-0">@x.movieNotes</p></td>
                                        <td class="align-middle text-center text-sm"><a class="btn bg-gradient-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.movieID">Edit</a></td>
                                        <td class="align-middle text-center text-sm"><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.movieID">Delete</a></td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>